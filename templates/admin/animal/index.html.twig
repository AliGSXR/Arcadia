{% extends 'admin/base.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block body %}
    <div id="animal-gest" class="container mt-5">
        <h1 class="mb-4 text-center">Gestion des Animaux</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">État</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for animal in animals %}
                    <tr>
                        <td>{{ animal.id }}</td>
                        <td>{{ animal.prenom }}</td>
                        <td>{{ animal.etat }}</td>
                        <td>
                            <a href="{{ path('app_animal_show', {'id': animal.id}) }}" class="btn btn-info btn-sm mr-2">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_animal_edit', {'id': animal.id}) }}" class="btn btn-warning btn-sm mr-2">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a href="{{ path('app_animal_delete', {'id': animal.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet animal ?');">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun animal dans la liste</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_animal_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Ajouter un animal
            </a>
        </div>
    </div>
{% endblock %}