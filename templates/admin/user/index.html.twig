{% extends 'admin/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Gestionnaire utilisateurs</h1>

        <table class="table table-striped table-hover" style="font-family: ">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Mail</th>
                <th>Rôles</th>
                <th>Mot de passe</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun compte existant</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_user_new') }}" class="btn btn-success">Créer un compte utilisateur</a>
    </div>
{% endblock %}
